{
  "type": "commonjs",
  "dependencies": {
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.54",
    "express": "^4.18.1",
    "fp-ts": "^2.12.2",
    "io-ts": "^2.2.17",
    "mongodb": "^4.9.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "ts-node": "^10.9.1",
    "typescript-cookie": "^1.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.5",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19"
  },
  "scripts": {
    "start": "concurrently \"npm run build\" \"node dist/server/index.js\"",
    "build": "concurrently \"npm run build-server\" \"npm run build-client\"",
    "build-server": "esbuild server/src/index.ts --bundle --outdir=dist/server --platform=node --target=node16.16.0",
    "build-client": "esbuild client/src/index.ts --bundle --outdir=dist/client",

    "dev": "concurrently \"npm run watch-server\" \"npm run watch-client\" \"nodemon --enable-source-maps -q dist/server/index.js\"",
    "watch-server": "esbuild server/src/index.ts --sourcemap --bundle --watch --outdir=dist/server --platform=node --target=node16.16.0",
    "watch-client": "esbuild client/src/index.ts --sourcemap --bundle --watch --outdir=dist/client"
  }
}
